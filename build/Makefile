# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  glfw3_config = debug
  win96_config = debug
  minivector_config = debug
endif
ifeq ($(config),release)
  glfw3_config = release
  win96_config = release
  minivector_config = release
endif

PROJECTS := glfw3 win96 minivector

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

glfw3:
ifneq (,$(glfw3_config))
	@echo "==== Building glfw3 ($(glfw3_config)) ===="
	@${MAKE} --no-print-directory -C . -f glfw3.make config=$(glfw3_config)
endif

win96:
ifneq (,$(win96_config))
	@echo "==== Building win96 ($(win96_config)) ===="
	@${MAKE} --no-print-directory -C . -f win96.make config=$(win96_config)
endif

minivector: win96
ifneq (,$(minivector_config))
	@echo "==== Building minivector ($(minivector_config)) ===="
	@${MAKE} --no-print-directory -C . -f minivector.make config=$(minivector_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f glfw3.make clean
	@${MAKE} --no-print-directory -C . -f win96.make clean
	@${MAKE} --no-print-directory -C . -f minivector.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   glfw3"
	@echo "   win96"
	@echo "   minivector"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"